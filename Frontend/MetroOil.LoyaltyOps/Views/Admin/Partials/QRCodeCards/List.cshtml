@using MetroOil.LoyaltyOps.Helpers;
@{
    var urlPrefix = System.Configuration.ConfigurationManager.AppSettings["urlPrefix"];
}
<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@urlPrefix/">Home</a>
                <i class="fa fa-caret-right"></i>
            </li>
            <li>
                <span>QR Code Cards</span>
            </li>
        </ul>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <!-- BEGIN MAIN CONTENT-->
    <!-- BEGIN FORM-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject">QR Code Cards</span>
                    </div>
                    <div class="tools">
                        @if (Html.SectionIsEnabled("AdQRCodeCardsGenerate"))
                        {
                        <a ng-click="modelGenerateQRCode=true;" href="javascript:;" class="tooltips" title="" data-original-title="Generate QR Code Cards"><i class="material-icons">library_add</i></a>
                        }
                    </div>
                </div>
                <div class="portlet-body">
                    <table dtable options="dtOptions" class="table table-bordered hover">
                        <thead class="">
                            <tr>
                                <th>#</th>
                                <th>Batch ID</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Generated On</th>
                                <th>Generated By</th>
                                <th>Download File</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <!-- END FORM-->
    <!-- END MAIN CONTENT-->
</div>
<div class="modal md-modal fade" role="dialog" app-modal trigger="modelGenerateQRCode" data-keyboard="false" data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-dialog-small">
        <div class="modal-content">
            <div class="modal-header" data-toggle="modal">
                <h4 class="modal-title">Generate QR Code Cards</h4>
                <button ng-click="modelGenerateQRCode=false;" aria-label="Close" class="ngdialog-close"></button>
            </div>
            <div class="modal-body">
                <span id="ErrorGenerateQRCode"></span>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="number" ng-model="_Object.Qty" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-form-action">
                <button ng-click="modelGenerateQRCode=false;" class="btn btn-default btn-cons">Cancel</button>
                <button type="button" ng-click="OnGenerateQRCode()" class="btn blue">Generate</button>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function () {
        // Remove left menu
        $('body').addClass('layout1menu');
    });
</script>