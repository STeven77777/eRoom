@section CustomPageScript
{
    @*@Scripts.Render("~/Content/Scripts/application")*@
    @Scripts.Render("~/Content/Scripts/homepage")
    <script src="~/assets/global/plugins/jquery-easypiechart/jquery.easypiechart.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            // Remove left menu
            $('body').addClass('layout1menu');

            $('.easy-pie-chart .number.transactions').easyPieChart({
                animate: 1000,
                size: 150,
                lineWidth: 12,
                lineCap: 'square',
                scaleColor: false,
                barColor: '#f29200',
                trackColor: '#cfd1d2'
            });

            $('.easy-pie-chart .number.visits').easyPieChart({
                animate: 1000,
                size: 150,
                lineWidth: 12,
                lineCap: 'square',
                scaleColor: false,
                barColor: '#b1c800',
                trackColor: '#cfd1d2'
            });

            $('.easy-pie-chart .number.bounce').easyPieChart({
                animate: 1000,
                size: 150,
                lineWidth: 12,
                lineCap: 'square',
                scaleColor: false,
                barColor: '#e2001a',
                trackColor: '#cfd1d2'
            });
        });
    </script>
}
