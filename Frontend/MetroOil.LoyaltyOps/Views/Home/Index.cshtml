        <div class="row">
            <div class="col-lg-12">
                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-cursor font-dark hide"></i>
                            <span class="caption-subject font-dark bold uppercase">SUMMARY</span>
                        </div>
                        <div class="actions">
                            <a href="@(urlPrefix +"/Reports#/ReportViewer")" class="btn btn-sm btn-circle orange easy-pie-chart-reload">Report Viewer</a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="easy-pie-chart">
