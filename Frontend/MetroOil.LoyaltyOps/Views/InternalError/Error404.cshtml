@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Page Not Found</title>
    @Styles.Render("~/Content/Styles/css")
    @Styles.Render("~/Content/Styles/global")
    @Styles.Render("~/Content/Styles/error")
</head>
<body class="page-500-full-page">
    <div class="row">
        <div class="col-md-12 page-500">
            <div class=" number font-red"> 404 </div>
            <div class=" details">
                <h3>Page Not Found</h3>
                <p>
                    The resource you tried to access were not found on the server or has been relocated. Please contact your administrator.
                    <br>
                </p>
                <p>
                    <a href="@Url.Action("Index","Home")" class="btn red btn-outline"> Return home </a>
                    <br>
                </p>
            </div>
        </div>
    </div>
</body>
</html>