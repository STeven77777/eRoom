                            <i class="fa fa-circle"></i>
                        </li>
                        <li>
                            <span>02/12/2016</span>
                        </li>
                    </ul>
                </div>
                <!-- END BASIC INFORMATION -->
                <table dtable options="PricingModelHisLst" class="table table-bordered table-striped table-condensed">
                    <thead >
                        <tr>
                            <th>#</th>
                            <th>Unit Price</th>
                            <th>Validity Period</th>
                            <th>Created On</th>
                            <th>Created By</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </script>
</div>
