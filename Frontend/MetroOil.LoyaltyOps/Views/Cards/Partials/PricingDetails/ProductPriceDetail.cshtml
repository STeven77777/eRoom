                            <li>
                                <span class="tooltips" data-original-title="Card Type">Standalone</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span class="tooltips" data-original-title="Customer Account No.">9894934943</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span class="tooltips" data-original-title="Company / Individual Name">HSBC Sentul</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span class="tooltips" data-original-title="Program Type">Postpaid</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span class="tooltips" data-original-title="Created On">22/12/2017</span>
                            </li>
                        </ul>
                    </div>
                    <!-- END BASIC INFORMATION -->
                    <div>
                        <h4 class="form-section">Product Info</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Code</label>
                                    <select class="form-control">
                                        <option>1001</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Name</label>
                                    <select class="form-control">
                                        <option>PRIMAX 92</option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Description</label>
                                    <textarea class="form-control">Product Detail</textarea>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Category<span>(required)</span></label>
                                    <select class="form-control">
                                        <option>Fuel</option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Type<span>(required)</span></label>
                                    <select class="form-control">
                                        <option>Diesel</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Pricing Model</label>
                                    <select class="form-control">
                                        <option>Price 1</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Billing Plan<span>(required)</span></label>
                                    <select class="form-control">
                                        <option>Plan A</option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Created On</label>
                                    <div class="input-icon right input-medium">
                                        <i class="material-icons">today</i>
                                        <input autocomplete="on" disabled="" class="form-control ng-valid ng-isolate-scope ng-dirty ng-not-empty ng-touched" date_picker="" id="ExpDate" name="ExpDate" section="gen" type="text" value="22/12/2016" style="">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Created By</label>
                                    <input class="form-control" readonly="readonly" value="user01" />
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="form-section section-custom">
                            <h4>Pricing Model</h4>
                            <div class="right-actions">
                                <span ng-click="loadPricingModelNew();" class="action tooltips" data-original-title="Add Unit Price"><i class="material-icons">add</i></span>
                                <span ng-click="showPricingModelHis();" class="action tooltips" data-original-title="View History"><i class="material-icons">history</i></span>
                            </div>
                        </div>
                        <table class="table table-bordered table-striped table-condensed ng-isolate-scope dataTable no-footer">
                            <thead>
                                <tr>
                                    <th>Unit Price</th>
                                    <th>Validity Period</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in ProductPriceItems">
                                    <td>
                                        <input ng-show="item.isEdit" ng-disabled="isEdit" amount ng-model="item.UnitPrice" ng-class="input.$valid?'':'errorthere'" class="form-control acctno" type="text" />
                                        <span ng-hide="item.isEdit">
                                            {{item.UnitPrice}}
                                        </span>
                                    </td>
                                    <td>
                                        <span ng-hide="item.isEdit">
                                            {{item.ValidityFrom}} to {{item.ValidityTo}}
                                        </span>
                                        <div ng-show="item.isEdit" class="input-group input-large date-picker input-daterange" data-date="10/11/2012" data-date-format="mm/dd/yyyy">
                                            <input type="text" class="form-control" name="from" ng-model="item.ValidityFrom">
                                            <span class="input-group-addon"> to </span>
                                            <input type="text" class="form-control" name="to" ng-model="item.ValidityTo" >
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group" ng-show="item.isEdit">
                                            <a href="javascript:;" id="btnCancelRow" ng-click="productPirceCancel(item);" class="btn btn-sm btn-small grey-cascade"><i class="fa fa-times"></i></a>
                                            <a href="javascript:;" id="btnSaveRow" ng-click="productPirceSave(item);" class="btn btn-sm btn-small green"><i class="fa fa-check"></i></a>
                                        </div>
                                        <div class="btn-group" ng-hide="item.isEdit">
                                            <a href="javascript:;" id="btnDeleteRow" ng-click="productPirceDelete(item);" class="btn btn-sm btn-small red"><i class="fa fa-trash-o"></i></a>
                                            <a href="javascript:;" id="btnEditRow" ng-click="productPirceEdit(item);" class="btn btn-sm btn-small btn-success"><i class="fa fa-pencil"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="form-actions right">
                    <a ng-click="backToList();" class="link quick-link">< Back to list</a>
                    <button type="button" ng-click="backToList();" class="btn white">Cancel</button>
                    <button type="button" data-validation-form data-customsubmit="" class="btn blue">Save</button>
                </div>
            </form>
            <script type="text/javascript">
                $(function () {
                    App.init(); // init metronic core componets
                });
            </script>
        </div>
    </div>
    <!-- END FORM-->
    <!-- END MAIN CONTENT-->
