@using CardTrend.FleetOps.Helpers
@model CardTrend.FleetOps.Models.AcctSignUpModel
@using AplLeftMenu = Resources.ApplicationLeftMenu

<div class="page-content">
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="#">Home</a>
                <i class="fa fa-caret-right"></i>
            </li>
            <li>
                <a href="#">All Customers</a>
                <i class="fa fa-caret-right"></i>
            </li>
            <li>
                <a href="#">Customer Profile</a>
                <i class="fa fa-caret-right"></i>
            </li>
            <li>
                <span>Pricing Details</span>
            </li>
        </ul>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title"></h1>
    <div class="portlet box blue ">
        <div class="portlet-title">
            <div class="caption">Product Price</div>
        </div>
        <div class="portlet-body form">
            <form id="fullApplicationForm" class="horizontal-form form">
                <div class="form-body">
                    <!-- BEGIN BASIC INFORMATION -->
                    <div class="page-bar quick-info">
                        <ul class="page-breadcrumb">
                            <li>
                                <i class="bg-green status-block"></i>
                                <span>HSBC Sentul</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span>9894934943</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span>Postpaid</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span>VIP</span>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span>02/12/2016</span>
                            </li>
                        </ul>
                    </div>
                    <!-- END BASIC INFORMATION -->
                    <div class="main-content">
                        <h4 class="form-section">Product Info</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Code</label>
                                    <select class="form-control">
                                        <option>1001</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Name</label>
                                    <select class="form-control">
                                        <option>PRIMAX 92</option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Description</label>
                                    <textarea class="form-control" readonly>New product</textarea>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Category<span>*</span></label>
                                    <select disabled class="form-control">
                                        <option>Fuel</option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Type</label>
                                    <select disabled class="form-control">
                                        <option>Diesel</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Pricing Model</label>
                                    <select class="form-control">
                                        <option>Price 1</option>
                                        <option></option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Billing Plan</label>
                                    <select class="form-control">
                                        <option>Plan A</option>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="form-section section-custom">
                            <h4>Pricing Model</h4>
                            <div class="right-actions">
                                <span ng-click="loadPricingModelNew();" class="action tooltips" data-original-title="Add Unit Price"><i class="material-icons">add</i></span>
                                <span ng-click="loadPricingModelHis();" class="action tooltips" data-original-title="View History"><i class="material-icons">history</i></span>
                            </div>
                        </div>
                        <table class="table table-bordered table-striped table-condensed flip-content ng-isolate-scope dataTable no-footer">
                            <thead class="flip-content">
                                <tr>
                                    <th>Unit Price</th>
                                    <th>Validity Period</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in ProductPriceItems">
                                    <td>
                                        <input ng-show="item.isEdit" ng-disabled="isEdit" amount ng-model="item.UnitPrice" ng-class="input.$valid?'':'errorthere'" class="form-control acctno" type="text" />
                                        <span ng-hide="item.isEdit">
                                            {{item.UnitPrice}}
                                        </span>
                                    </td>
                                    <td>
                                        <span ng-hide="item.isEdit">
                                            {{item.ValidityFrom}} to {{item.ValidityTo}}
                                        </span>
                                        <div ng-show="item.isEdit" class="input-group input-large date-picker input-daterange" data-date="10/11/2012" data-date-format="mm/dd/yyyy">
                                            <input type="text" class="form-control" name="from" ng-model="item.ValidityFrom">
                                            <span class="input-group-addon"> to </span>
                                            <input type="text" class="form-control" name="to" ng-model="item.ValidityTo">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group" ng-show="item.isEdit">
                                            <a href="javascript:;" id="btnCancelRow" ng-click="productPirceCancel(item);" class="btn btn-sm btn-small grey-cascade"><i class="fa fa-times"></i></a>
                                            <a href="javascript:;" id="btnSaveRow" ng-click="productPirceSave(item);" class="btn btn-sm btn-small green"><i class="fa fa-check"></i></a>
                                        </div>
                                        <div class="btn-group" ng-hide="item.isEdit">
                                            <a href="javascript:;" id="btnDeleteRow" ng-click="productPirceDelete(item);" class="btn btn-sm btn-small red"><i class="fa fa-trash-o"></i></a>
                                            <a href="javascript:;" id="btnEditRow" ng-click="productPirceEdit(item);" class="btn btn-sm btn-small btn-success"><i class="fa fa-pencil"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="prm-history" style="display:none">
                        <h4 class="form-section">Pricing Model History</h4>
                        <table dtable options="PricingModelHisLst" class="table table-bordered table-striped table-condensed flip-content">
                            <thead class="flip-content">
                                <tr>
                                    <th>#</th>
                                    <th>Unit Price</th>
                                    <th>Validity Period</th>
                                    <th>Created On</th>
                                    <th>Created By</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="form-actions right">
                    <div class="main-content">
                        <button type="button" class="btn white">Cancel</button>
                        <button type="button" data-validation-form data-customsubmit="SaveGeneralInfo();" class="btn blue">Save</button>
                    </div>
                    <div class="prm-history" style="display:none">
                        <button ng-click="backToMainContent();" type="button" class="btn blue"><i class="material-icons">arrow_back</i>Back</button>
                    </div>
                </div>
            </form>
            <script type="text/javascript">
                $(function () {
                    App.init(); // init metronic core componets
                });
            </script>
        </div>
    </div>
    <!-- END FORM-->
    <!-- END MAIN CONTENT-->
</div>
<script type="text/javascript">
    $(function () {
        $('body').removeClass('layout1menu');
        $('.date-picker').datepicker();
    });
    function showStatusHistory() {
        $('.main-content').hide();
        $('.stt-history').show();
    };

    function backToMainContent() {
        $('.main-content').show();
        $('.stt-history').hide();
    }
</script>